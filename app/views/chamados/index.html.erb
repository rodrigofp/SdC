
<h1 class="card-header bg-grad">Chamados</h1>

<p id="notice"><%= notice %></p>
<table class="table table-hover text-left">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Data abertura</th>
      <th>Data fechamento</th>
      <th>Modulo</th>
      <th>Tipo chamado</th>
      <th>Prioridade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chamados.each do |chamado| %>
      <tr>
        <td><%= chamado.usuario.nome %></td>
        <td><%= chamado.data_abertura %></td>
        <td><%= chamado.data_fechamento %></td>
        <td><%= chamado.modulo.nome %></td>
        <td><%= chamado.tipo_chamado.tipo %></td>
        <td><%= chamado.prioridade.nome %></td>
        <%= render :partial => 'shared/button_index', locals: { show_path: chamado, edit_path: edit_chamado_path(chamado) }%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render :partial => 'shared/button_new', locals: { path: new_chamado_path }%>