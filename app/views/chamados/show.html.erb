<h1 class="card-header bg-grad">Detalhes do Chamado</h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Usuario:</strong>
  <%= @chamado.usuario.nome %>
</p>

<p>
  <strong>Data abertura:</strong>
  <%= @chamado.data_abertura %>
</p>

<p>
  <strong>Data fechamento:</strong>
  <%= @chamado.data_fechamento %>
</p>

<p>
  <strong>Modulo:</strong>
  <%= @chamado.modulo.nome %>
</p>

<p>
  <strong>Tipo chamado:</strong>
  <%= @chamado.tipo_chamado.tipo %>
</p>

<p>
  <strong>Prioridade:</strong>
  <%= @chamado.prioridade.nome %>
</p>

<%= link_to 'Alterar', edit_chamado_path(@chamado), class: "btn btn-bottom btn-sm btn-grad bg-grad" %>
<%= link_to 'Voltar', chamados_path, class: "btn btn-bottom btn-sm btn-voltar bg-voltar" %>
