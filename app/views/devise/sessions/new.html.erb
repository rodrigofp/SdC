<h1 class="card-header bg-grad">Login</h1>

<br />
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field row form-group justify-content-center">
    <%= f.label :email, class: "col-2 col-form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-4" %>
  </div>

  <div class="field row form-group justify-content-center">
    <%= f.label :password, class: "col-2 col-form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-4" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field row form-group justify-content-center">
      <div class="col-2 form-check text-left">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    </div>
  <% end -%>

  <div class="actions d-flex justify-content-center">
    <%= f.submit "Login", class: "btn btn-grad bg-grad" %>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>
