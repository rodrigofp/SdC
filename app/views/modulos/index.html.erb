
<h1 class="card-header bg-grad">Módulos</h1>

<p id="notice"><%= notice %></p>
<table class="table table-hover text-left">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modulos.each do |modulo| %>
      <tr>
        <td><%= modulo.nome %></td>
        <td><%= link_to 'Detalhes', modulo, class: "btn btn-sm btn-grad bg-grad" %></td>
        <td><%= link_to 'Alterar', edit_modulo_path(modulo), class: "btn btn-sm btn-grad bg-grad" %></td>
        <td><%= link_to 'Excluir', modulo, class: "btn btn-sm btn-excluir bg-excluir", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Módulo', new_modulo_path, class: "btn btn-bottom btn-sm btn-grad bg-grad" %>
