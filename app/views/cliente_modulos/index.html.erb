
<h1 class="card-header bg-grad">Cliente Módulos</h1>

<p id="notice"><%= notice %></p>
<table class="table table-hove text-left">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Modulo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cliente_modulos.each do |cliente_modulo| %>
      <tr>
        <td><%= cliente_modulo.cliente.nome %></td>
        <td><%= cliente_modulo.modulo.nome %></td>
        <%= render :partial => 'shared/button_index', locals: { show_path: cliente_modulo, edit_path: edit_cliente_modulo_path(cliente_modulo) }%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render :partial => 'shared/button_new', locals: { path: new_cliente_modulo_path, text: ' Cliente Módulo' }%>
