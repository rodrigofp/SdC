
<h1 class="card-header bg-grad">Cliente Modulos</h1>

<p id="notice"><%= notice %></p>
<table class="table table-hove text-left">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Modulo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cliente_modulos.each do |cliente_modulo| %>
      <tr>
        <td><%= cliente_modulo.cliente.nome %></td>
        <td><%= cliente_modulo.modulo.nome %></td>
        <td><%= link_to 'Detalhes', cliente_modulo, class: "btn btn-sm btn-grad bg-grad" %></td>
        <td><%= link_to 'Alterar', edit_cliente_modulo_path(cliente_modulo), class: "btn btn-sm btn-grad bg-grad" %></td>
        <td><%= link_to 'Excluir', cliente_modulo, class: "btn btn-sm btn-excluir bg-excluir", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Cliente Modulo', new_cliente_modulo_path, class: "btn btn-bottom btn-grad bg-grad" %>
