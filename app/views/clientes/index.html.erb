<p id="notice"><%= notice %></p>
<div class="text-center">
<h1>Clientes</h1>

<table class="table table-hover text-left">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= link_to 'Detalhes', cliente, class: "btn btn-sm btn-outline-info" %></td>
        <td><%= link_to 'Alterar', edit_cliente_path(cliente), class: "btn btn-sm btn-outline-warning" %></td>
        <td><%= link_to 'Excluir', cliente, class: "btn btn-sm btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Cliente', new_cliente_path, class: "btn btn-sm btn-outline-success" %>
</div>