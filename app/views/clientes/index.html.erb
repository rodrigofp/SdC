
<h1 class="card-header bg-grad">Clientes</h1>

<p id="notice"><%= notice %></p>
<table class="table table-hover text-left">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <%= render :partial => 'shared/button_index', locals: { show_path: cliente, edit_path: edit_cliente_path(cliente) }%>
      </tr>
    <% end %>
  </tbody>
</table>
<% if @clientes.count > 10 %>
  <%= render :partial => 'shared/pagination', locals: { collection: @clientes }%>
<% end %>
<%= render :partial => 'shared/button_new', locals: { path: new_cliente_path, text: ' Cliente' }%>