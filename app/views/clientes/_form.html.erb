
<%= form_with(model: cliente, local: true) do |form| %>
  <% if cliente.errors.any? %>
    <div id="error_explanation" class="bg-excluir">
      <h2><%= "#{cliente.errors.count} #{t('messages.error', count: cliente.errors.count)}:" %></h2>

      <ul>
      <% cliente.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row form-group justify-content-center">
    <%= form.label :nome, class: "col-2 col-form-label" %>
    <%= form.text_field :nome, class: "form-control col-4" %>
    <%= render 'shared/invalid_feedback'%>
  </div>
  <hr>
  <h4>Vincular módulos </h4>
  <br/>
  <div id="cliente_modulos">
    <%= form.fields_for :cliente_modulos do |cliente_modulo| %>
      <%= render 'cliente_modulo_fields', f: cliente_modulo %>
    <% end %>
  </div>
    
  <div class="links d-flex justify-content-center">
    <%= link_to_add_association 'Vincular módulo', form, :cliente_modulos, class: "btn btn-sm btn-grad bg-grad" %>
  </div>
  <br/>
  <div class="actions d-flex justify-content-center">
    <%= form.submit "Salvar", class: "btn btn-grad bg-grad" %>
  </div>
<% end %>

