
<h1 class="card-header bg-grad">Usuarios</h1>

<p id="notice"><%= notice %></p>
<table class="table table-hover text-left">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Tipo usuario</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nome %></td>
        <td><%= usuario.cpf %></td>
        <td><%= usuario.tipo_usuario.tipo %></td>
        <td><%= usuario.cliente.nome %></td>
        <%= render :partial => 'shared/button_index', locals: { show_path: usuario, edit_path: edit_usuario_path(usuario) }%>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="apple_pagination d-flex justify-content-center">
  <%= will_paginate @usuarios %>
</div>

