
<h1 class="card-header bg-grad">Usuários</h1>


<table class="table table-hover text-left">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Tipo usuário</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nome %></td>
        <td><%= usuario.cpf %></td>
        <td><%= usuario.tipo_usuario.tipo %></td>
        <td><%= usuario.cliente.nome %></td>
        <%= render :partial => 'shared/button_index', locals: { show_path: usuario, edit_path: edit_usuario_path(usuario) }%>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @usuarios.count > 10 %>
  <%= render :partial => 'shared/pagination', locals: { collection: @usuarios }%>
<% end %>

<%= render :partial => 'shared/button_new', locals: { path: new_usuario_path, text: ' Usuário' }%>
